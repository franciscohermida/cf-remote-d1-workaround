{
	"name": "cf-remote-d1-workaround",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "vite dev",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types",
		"db:migration:create": "wrangler d1 migrations create proto-remote-migration",
		"db:migration:script:empty": "prisma migrate diff --from-empty --to-schema ./prisma/schema.prisma --script --output ",
		"db:migration:script": "prisma migrate diff --from-config-datasource --to-schema ./prisma/schema.prisma --script --output ",
		"db:migration:apply": "wrangler d1 migrations apply proto-remote-migration",
		"db:migration:apply:workaround": "node ./scripts/apply-migration.ts proto-remote-migration",
		"db:seed": "wrangler d1 execute proto-remote-migration --file scripts/seed-sample.sql",
		"db:reset": "wrangler d1 execute proto-remote-migration --file scripts/reset-tables.sql",
		"db:generate": "prisma generate --schema ./prisma/schema.prisma",
		"db:snapshot": "node scripts/fetch-snapshot.ts",
		"db:snapshot:export": "wrangler d1 export proto-remote-migration --output=./dev/stdout"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.17.0",
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@hono/cli": "^0.1.3",
		"@types/node": "^24.10.1",
		"dotenv": "^17.2.3",
		"execa": "^5.1.1",
		"prisma": "^7.1.0",
		"typescript": "^5.5.2",
		"vite": "^7.2.6",
		"vitest": "~3.2.0",
		"wrangler": "^4.53.0"
	},
	"dependencies": {
		"@prisma/adapter-d1": "^7.1.0",
		"@prisma/client": "^7.1.0",
		"hono": "^4.10.7"
	}
}
